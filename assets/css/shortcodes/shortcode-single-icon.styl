/*!  SHORTCODE SINGLE ICON
----------------------------------------------------------*/

.vlt-single-icon
	display inline-flex
	align-items center
	justify-content center
	height 22px
	width 22px
	border-radius 2px
	font-size 12px
	color $c6
	background-color $c0
	&:hover
		color $c6
		background-color $c1

.vlt-single-icon + .vlt-single-icon
	margin-left 6px
