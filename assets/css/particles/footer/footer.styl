/*!  FOOTER
----------------------------------------------------------*/

// GENERAL

.vlt-footer-holder
	position relative
	width 100%
	.vlt-footer-inner
		padding 80px 0
		background-color $c8

.vlt-footer-holder[data-footer-fixed="1"]
	position fixed
	bottom 0
	left 0
	z-index 50

.vlt-footer-fixed .vlt-content-holder
	position relative
	z-index 60

@media (max-width: 768px)
	.vlt-footer-holder .vlt-footer-inner [class^="col"] + [class^="col"]
		margin-top 50px
	.vlt-footer-holder[data-footer-fixed="1"]
		position static
	.vlt-footer-fixed .vlt-content-holder
		margin-bottom 0 !important

.vlt-footer-holder .vlt-footer-inner

	.vlt-footer-copyright
		margin-top 40px
		color $c1
		p
			margin-bottom 0

	.vlt-site-logo
		display inline-flex
		margin-bottom 40px

	.vlt-footer-menu
		ul
			list-style-type none
			margin 0
			padding 0
			li
				display inline-flex
				margin 0 10px
				a
					text-transform uppercase
					font-size 14px
					color $c2
					&:hover
						color $c0