/*!  CART
----------------------------------------------------------*/

.vlt-cart-form-content,
.vlt-cart-form-actions
	margin 0
	&, th, td
		border none

	th,
	td
		padding 10px 0

	thead tr,
	.vlt-cart-product-item
		border-bottom 1px solid $c7

	.vlt-product-item-content
		display flex
		align-items center

		.vlt-product-item-thumbnail
			display inline-block
			line-height 0
			img
				height 90px
				width 90px
				max-width 90px
				@media (max-width: 575px)
					height 60px
					width 60px
					max-width 60px
			& + .vlt-product-item-permalink
				margin-left 30px
				@media (max-width: 575px)
					margin-left 15px

		.vlt-product-item-permalink
			color $c0
			white-space nowrap
			overflow hidden
			max-width 70%
			text-overflow ellipsis
			&:hover
				color $c3

	.vlt-product-quantity-content
		.vlt-quantity input[type="number"]
			max-width 60px
			text-align left
			padding 4px 8px
			border 1px solid $c7

	.vlt-product-remove,
	.vlt-product-remove-content
		text-align right

.vlt-cart-form-actions
	margin-top 1.5rem

	.vlt-cart-update
		text-align right
		@media (max-width: 575px)
			display block
			text-align left

		.vlt-update-cart
			font-size inherit
			color $c0
			border none
			background none
			padding 0
			transition all 150ms $transition
			cursor pointer
			&:hover
				color $c3

	.vlt-cart-coupon
		input[type="text"]
			max-width 180px
			float left

			@media (max-width: 575px)
				width 50%
				max-width none
		.vlt-btn
			@media (max-width: 575px)
				width 50%

		@media (max-width: 575px)
			display block


/*!  CART TOTALS
----------------------------------------------------------*/

.vlt-cart-totals
	margin-top 5rem
	color $c0
	table, th, td
		border none

	table
		margin-bottom 1.5rem
		th, td
			padding 10px 0

	.vlt-order-total strong
		font-weight 400


/*!  BILLING
----------------------------------------------------------*/

.vlt-billing-title
	margin-bottom 1.5rem

.vlt-checkout-coupon
	height auto !important
	margin-bottom 1.5rem !important
	input[type="text"]
		float left

.vlt-form-login,
.vlt-form-reset-pswrd
	max-width 450px
	border 1px solid $c0
	padding 30px !important
	height auto !important
	margin-bottom 1.5rem !important
	.vlt-form-group
		input:not([type="checkbox"])
			width 100%
		.inline
			margin-top 10px

	.vlt-lost-password a
		font-size 14px
		color $c0
		text-decoration underline
		&:hover
			color $c0
			text-decoration none

	.vlt-remember-me
		font-size 14px
		margin-top 1.5rem

.vlt-create-account
	height auto !important


/*!  ORDER
----------------------------------------------------------*/

.vlt-order-review
	margin-top 5rem

	.vlt-order-review-title
		margin-bottom 1.5rem

	.vlt-checkout-review-order-table
		color $c0
		margin 0 0 1.5rem

	td,
	.vlt-product-total
		text-align right

	.vlt-order-total
		background-color $c0
		th, td
			color $c6
			padding 18px 10px
		strong
			font-weight 400

.vlt-checkout-payment,
.vlt-payment-method
	margin-bottom 1.5rem


.vlt-payment-method img
	max-height 1em
	margin-right 10px
